<% provide(:title, 'Create new Character API') %>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@api) do |f| %>
			<%= render 'shared/api_error_messages' %>

			<%= link_to "Predefined API Key", 'http://community.eveonline.com/support/api-key/CreatePredefined?accessMask=71307264' %>
			<%= f.label :key_id %>
			<%= f.text_field :key_id %>

			<%= f.label :v_code %>
			<%= f.text_field :v_code %>

			<%= f.submit "Submit New Key" %>
		<% end %>
	</div>
</div>

